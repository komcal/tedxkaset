extends ../layouts/default
block intro
	- var data = __('aboutus.content')
	.container.page-menu
		h1 ABOUT US
		for x in data
			a(href='#'+ x.slug): h2= x.header

block content
	- var data = __('aboutus.content')
	- var questions = __('aboutus.question')
	- var positiondata = [{pic:"http://fakeimg.pl/180x260/", name:"name"},{pic:"http://fakeimg.pl/180x260/", name:"name"},{pic:"http://fakeimg.pl/180x260/", name:"name"},{pic:"http://fakeimg.pl/180x260/", name:"name"},{pic:"http://fakeimg.pl/180x260/", name:"name"}]
	.container.page
		for x in data
			div(id=x.slug)
				h1= x.header
				p.subhead!= x.content
				if(x.header == "Team")
					.team
						- var n = 0
						for people in team
							.team-each
								div(type='button', data-toggle='modal', data-target='#team-' + n)
									!{getField(people, 'Name', locale)}
								+modal(getField(people, 'Name', locale),'team-'+n) 
									p!= getField(people, 'Position', locale)
									if getField(people, 'image.url')
										img.team-image(src="#{getField(people, 'image.url')}" width="180")
								- n++

				if(x.slug === "faq")
					for question in questions
						#faq
							p#faq__header= question.ask
							p.subhead!= question.ans
